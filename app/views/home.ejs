                <li class="navbar__link second"><a href="/attractions" title="Voir toutes nos attractions">Nos attractions</a></li>
                <li class="navbar__link third"><a href="/reservations" title="Réservez votre séjour !!!">Réserver</a></li>
            </ul>

            <ul class="flex-nav margin-left-1 navbar__links" style="display: none;">
                <li class="navbar__link first"><a href="/" title="Accueil du site">Accueil</a></li>
                <li class="navbar__link second"><a href="/attractions" title="Voir toutes nos attractions">Nos attractions</a></li>
                <li class="navbar__link third"><a href="/reservations" title="Réservez votre séjour !!!">Réserver</a></li>

            <% if (typeof isLogged =='undefined' || isLogged == false ) { %>
                <li class="navbar__link"><a href="/connexion" title="Connexion">Connexion</a></li>
                <% } %>
            <% if (typeof isLogged !=='undefined' ) { %>
                <li class="navbar__link"><a href="/profil" title="Accéder a mon profil">Mon profil</a></li>
                <% } %>
            <% if (typeof isLogged !=='undefined' ) { %>
                <li class="navbar__link"><a href="/panier" title="Accéder a mon panier">Mon panier</a></li>
                <% } %>

            <% if (typeof isLogged !=='undefined' ) { %>
                    <% if ( isAdmin == true ) { %>
                    <li class="navbar__link"><a href="/admin" title="Accéder a l'espace admin">Espace admin</a></li>
                    <% } %>
                <% } %>

            <% if (typeof isLogged !=='undefined' ) { %>
                <li class="navbar__link"><a href="/deconnexion" title="Se déconnecter">Se déconnecter</a></li>
                <% } %>
            </ul>

            <button class="burger">
                <span class="bar"></span>
            </button>

            <% if (typeof isLogged !=='undefined' ) { %>
                <div class="profil-navigation display_desktop">
                    <% if (isAdmin == true ) { %>
                        <a href="/admin" class="go-profil a-no-underline display_desktop" title="Page admin"><i class="fa-regular fa-star"></i></a>
                        <% } %>
                    <a href="/profil" class="go-profil a-no-underline display_desktop" title="Page profil"><i
                            class="fa-regular fa-face-smile icon-nav-connect"></i></a>
                
                    <a href="/panier" class="go-profil a-no-underline display_desktop" title="Voir mon panier"><i class="fa-solid fa-cart-shopping"></i></a>
                    <a href="/deconnexion" class="go-deconnexion a-no-underline display_desktop" title="Deconnexion"><i
                            class="fa-solid fa-arrow-right-from-bracket icon-nav-connect"></i></a>
                </div>
                <% } else { %>
                <div class="profil-navigation">
                    <a href="/connexion" class="go-connexion a-no-underline display_desktop" title="Connexion"><i
                            class="fa-regular fa-user user-icon icon-nav"></i></a>
                    <!-- <a href="/panier" class="go-profil a-no-underline display_desktop" title="Voir mon panier"><i class="fa-solid fa-cart-shopping"></i></a> -->
                </div>
                    <% } %>
