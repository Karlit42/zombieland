<div class="tab-pane fade active show" id="account-general">
    <hr class="border-light m-0">
    <div class="card-body-user">
        <% if (typeof alert !=='undefined' ) { %>
            <p class="message message--error" role="alert">Erreur : <%= alert %>
            </p>
            <% } %>
                <div class="form-group">
                    <label class="form-label">Prénom</label>
                    <input type="text" class="form-control mb-1" value="<%= user.prenom %>" name="firstname" required>
                </div>
                <div class="form-group">
                    <label class="form-label">Nom</label>
                    <input type="text" class="form-control" value="<%= user.nom %>" name="name" required>
                </div>
                <div class="form-group">
                    <label class="form-label">E-mail</label>
                    <input type="email" class="form-control mb-1" value="<%= user.email %>" name="email" required>
                    <div class="alert alert-warning mt-3">
                        Votre e-mail n'a pas été vérifié. Merci de consulter votre boîte de réception.<br>
                        <a href="javascript:void(0)">Renvoyer une confirmation</a>
                    </div>
                </div>
    </div>
</div>